{
  "manifest_version": 2,
  "name": "WebDGap",
  "short_name": "WebDGap",
  "description": "Easily create multi-platform desktop apps!",
  "version": "1.2.5",
  "minimum_chrome_version": "38",
  "permissions": [ "tabs", "storage", "unlimitedStorage", "http://*/", "https://*/" ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "64": "assets/64.png",
    "128": "assets/128.png"
  },

  "browser_action": {
    "default_icon": "assets/128.png",
    "default_title": "WebDGap",
    "default_popup": "index.html"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}